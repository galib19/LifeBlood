<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HistoryActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/history_hospital_name_text"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/history_hospital_name"
                android:layout_marginEnd="1dp"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="@string/profile_name_text"
                android:textAlignment="gravity"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_details_text"
                android:layout_width="206dp"
                android:layout_height="80dp"
                android:layout_alignStart="@+id/history_hospital_name_text"
                android:layout_below="@+id/history_hospital_name_text"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="@string/profile_name_text"
                android:textAlignment="gravity"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginTop="65dp"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="@string/history_hospital_name"
                android:textAlignment="gravity"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/history_details"
                android:layout_width="106dp"
                android:layout_height="29dp"
                android:layout_alignStart="@+id/history_hospital_name"
                android:layout_below="@+id/history_hospital_name_text"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="@string/history_details"
                android:textAlignment="gravity"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/history_blood_group"
                android:layout_width="106dp"
                android:layout_height="29dp"
                android:layout_above="@+id/history_hospital_name_text"
                android:layout_alignStart="@+id/history_hospital_name"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="@string/blood_group"
                android:textAlignment="gravity"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/history_blood_group_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/history_hospital_name_text"
                android:layout_alignStart="@+id/history_hospital_name_text"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="@string/blood_group_text"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/history_hospital_name_text"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:fontFamily="serif-monospace"
                android:text="Time"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/history_blood_group"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray"
                android:backgroundTint="@android:color/darker_gray"
                android:color="#1FFFFFFF" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>